        <input name="last_name" class="form-input" type="text" id="lastname-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input name="email" class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input name="password" class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group text-right">
        <button id="signupBtn" class="btn" type="submit">Sign-Up</button>
