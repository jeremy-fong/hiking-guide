<ul id="favTrail">

   {{#each trailsData as |trail|}}


   <div class="hike card border" id={{ trail.id}}>
      <div class="card-body" id="hikeCard">
         <div class="row">
            <div class="col-sm-3 text-center">
               <img src={{trail.thumbnail}} alt="Trail Thumbnail Image" width="280px" height="200px" style="border:solid">
            </div>
            <div id="hikeTitle" class="col-sm-5">
               <header id="hikeName">
                  <h3><span id="hikeName">{{{trail.name}}}</span></h3>
               </header>
               <div class="container text-center" id="description">
                  <p>{{trail.description}}</p>
               </div>
            </div>
            <div class="col-sm-2">
               <h4>{{trail.city}}, {{trail.region}}</h4>
               <h5 style="font-style: italic"> Difficulty: {{trail.difficulty}}</h5>
               <p id="stars">Rating: {{trail.rating}}</p>
               <br>
               {{!-- <h5 style="font-style: italic"><strong><a href="{{trail.directions}}" target="_blank">Directions</a></strong></h5> --}}
               <h5 style="font-style: italic"><strong><a href="{{trail.url}}" target="_blank" class="moreInfo">More Info </a></strong></h5>
            </div>
            <div class="col-sm-2 text-center" id="saveHike">
               <button type="button" class="btn saveTrailBtn" data-toggle="modal" data-trailname="{{trail.name}}"
                  data-myval="{{trail.id}}" data-description="{{trail.description}}" data-directions="{{trail.directions}}"
                  data-difficulty="{{trail.difficulty}}" data-stars="{{trail.stars}}" data-location="{{trail.location}}"
                  data-url="{{trail.url}}" data-image="{{trail.thumbnail}}" data-length="{{trail.length}}">Delete</button>
        <a href="#">
          <span class="glyphicon glyphicon-trash"></span>
        </a>
<i class="fa-solid fa-trash-can"></i>
            </div>
         </div>
      </div>
   </div>

   {{/each}}

</ul>