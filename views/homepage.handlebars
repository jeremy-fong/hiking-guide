<div class="transbox p-5">
    <h2 class="text-center">Looking For A Hike? Search For A Location!</h2>
<form class="search-form">
    <div class="row">
        <div class="form-group col-md-3">
            <label for="address">Address</label>
            <input type="address" class="form-control" id="address" placeholder="1315 10th Street">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label for="city">City</label>
            <input type="city" class="form-control" id="city" placeholder="Sacramento">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-1">
            <label for="state">State</label>
            <input type="state" class="form-control" id="state" placeholder="CA">
        </div>
        <div class="form-group col-md-2">
            <label for="country">Country</label>
            <input type="country" class="form-control" id="country" placeholder="United States">
        </div>
    </div>
  <button id="searchBtn" type="search" class="btn">Search</button>
</form>
</div>


<script src="../public/js/index.js"></script>
